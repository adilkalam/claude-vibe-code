{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude-vibe-code.local/proofpack-v1.0.0.schema.json",
  "title": "Proofpack Schema",
  "description": "Unified proof artifact with cryptographic integrity verification",
  "type": "object",
  "required": [
    "schema_version",
    "hash",
    "timestamp",
    "task_id",
    "task_type",
    "agent",
    "metadata",
    "evidence",
    "deliverables_met",
    "verification_verdict",
    "signature"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0",
      "description": "Schema version for future compatibility"
    },
    "hash": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$",
      "description": "SHA-256 hash of proofpack content (excluding hash and signature fields)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when proofpack was created"
    },
    "task_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for the task"
    },
    "task_type": {
      "type": "string",
      "enum": ["ios-ui", "frontend-ui", "backend-api", "mobile-native", "data-pipeline"],
      "description": "Type of task (matches completion criteria registry)"
    },
    "agent": {
      "type": "string",
      "description": "Specialist agent that implemented this task"
    },
    "metadata": {
      "type": "object",
      "required": ["session_id", "user_requirement", "completion_criteria_version"],
      "properties": {
        "session_id": {
          "type": "string",
          "description": "Session identifier for traceability"
        },
        "user_requirement": {
          "type": "string",
          "description": "Exact quote from user-request.md"
        },
        "completion_criteria_version": {
          "type": "string",
          "description": "Version of completion criteria used"
        }
      }
    },
    "evidence": {
      "type": "object",
      "description": "All evidence collected during verification",
      "properties": {
        "screenshots": {
          "type": "object",
          "description": "Base64-encoded screenshots",
          "patternProperties": {
            ".*": {
              "type": "string",
              "pattern": "^data:image/(png|jpeg);base64,",
              "description": "Base64-encoded image data URL"
            }
          }
        },
        "test_outputs": {
          "type": "object",
          "description": "Test execution outputs",
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          }
        },
        "build_logs": {
          "type": "object",
          "properties": {
            "build_command": {"type": "string"},
            "exit_code": {"type": "integer"},
            "stdout": {"type": "string"},
            "stderr": {"type": "string"}
          }
        },
        "verification_report": {
          "type": "string",
          "description": "Markdown content from verification-report.md"
        },
        "design_review": {
          "type": "string",
          "description": "Markdown content from design-review-report.md (optional)"
        },
        "performance_benchmarks": {
          "type": "object",
          "properties": {
            "p50_latency_ms": {"type": "number"},
            "p95_latency_ms": {"type": "number"},
            "throughput_rps": {"type": "number"}
          }
        },
        "security_scan": {
          "type": "object",
          "properties": {
            "tool": {"type": "string"},
            "critical_count": {"type": "integer"},
            "high_count": {"type": "integer"},
            "output": {"type": "string"}
          }
        }
      }
    },
    "deliverables_met": {
      "type": "object",
      "description": "Binary pass/fail for each required deliverable",
      "patternProperties": {
        ".*": {
          "type": "boolean"
        }
      }
    },
    "verification_verdict": {
      "type": "string",
      "enum": ["PASSED", "BLOCKED", "CONDITIONAL"],
      "description": "Overall verification verdict"
    },
    "quality_score": {
      "type": ["number", "null"],
      "minimum": 0,
      "maximum": 100,
      "description": "Quality score from quality-validator (null if not yet scored)"
    },
    "signature": {
      "type": "object",
      "required": ["signer", "signed_at", "algorithm"],
      "properties": {
        "signer": {
          "type": "string",
          "description": "Agent that signed this proofpack (typically verification-agent)"
        },
        "signed_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the proofpack was signed"
        },
        "algorithm": {
          "type": "string",
          "const": "sha256",
          "description": "Hash algorithm used"
        }
      }
    }
  }
}
