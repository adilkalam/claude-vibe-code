  "critical_rules": {
    "rule_9d_bento_grid": {
      "severity": "INSTANT_FAIL",
      "description": "Bento Grid Alignment - The ONLY reliable method for perfect internal alignment",
      "principles": [
        "All cards are direct children of .bento-grid (NO wrapper divs)",
        "Card sizing is class-based (.bento-small, .bento-medium, .bento-large, .bento-hero, .bento-mega)",
        "Cards of same type use IDENTICAL grid-template-rows",
        "Flexible spacer row (1fr) before footer absorbs height differences",
        "TSX children count MUST match CSS grid rows exactly"
      ],
      "forbidden": [
        "Wrapper divs like .bentoRow or .bento-content",
        "Using <div className='spacer'> as children (must be plain <div></div>)",
        "Flexbox with margin-top: auto for footer alignment",
        "Mismatched child count vs grid row count",
        "Subgrid-based approaches"
      ],
      "small_card_template": "auto auto 1fr auto (4 children: Header, Description, Empty div, Footer)",
      "large_card_template": "auto auto auto minmax(var(--space-12), 1fr) auto (5 children: Header, Description, Benefits, Empty div, Note)"
    }
  },
  "alignment": {
    "fundamental_principle": "Mathematical alignment ≠ Visual alignment",
    "rules": {
      "triangle_pointed_shapes": {
        "rule": "Shift 5-8% toward pointed direction (typically rightward)",
        "why": "Triangle's bounding box center (50%) ≠ visual centroid (~33%)",
        "formula": "horizontalOffset = containerWidth × 0.0625 (round to 4px/8px grid)"
      },
      "icon_to_text_vertical": {
        "rule": "Nudge icons 1-2px upward to align with text x-height (not baseline)",
        "horizontal_gap": "Increase by 50% vs text-only spacing (12px instead of 8px)",
        "max_icon_size": "20px (24px for heroes only)"
      },
      "border_weight_compensation": {
        "formula": "adjustedPadding = originalPadding - borderWidth",
        "example": "24px padding + 2px border = 22px adjusted padding"
      },
      "heavy_elements": {
        "bold_text": "Add 4px extra spacing below",
        "dark_backgrounds": "Increase surrounding space",
        "high_contrast": "Requires more separation"
      },
      "bullet_list": {
        "bullet_size": "0.75em (75% of text size)",
        "vertical_position": {
          "14px_text": "top: 0.175rem",
          "16px_text": "top: 0.25rem",
          "18px_text": "top: 0.3rem"
        },
        "use_rem_not_em": "rem maintains consistent optical relationship"
      }
    }
  },
