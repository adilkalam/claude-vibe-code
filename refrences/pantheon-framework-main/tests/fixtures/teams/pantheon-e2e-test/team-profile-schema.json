{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "active_profile": {
      "type": "string",
      "description": "The name of the currently active profile"
    },
    "profiles": {
      "type": "object",
      "properties": {
        "default": {
          "type": "object",
          "properties": {
            "verbosity": {
              "type": "string",
              "enum": ["quiet", "standard", "verbose"],
              "description": "Verbosity level for output"
            }
          },
          "required": ["verbosity"]
        }
      },
      "required": ["default"]
    }
  },
  "required": ["active_profile", "profiles"]
}