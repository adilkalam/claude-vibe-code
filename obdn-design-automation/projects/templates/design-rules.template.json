{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "[PROJECT_NAME] Design System Rules",
  "description": "Structured design system rules for automated compliance checking and agent training",
  "version": "1.0.0",
  "lastUpdated": "[DATE]",

  "project_info": {
    "name": "[PROJECT_NAME]",
    "aesthetic": "[Swiss minimalism / Modern SaaS / Playful consumer / etc.]",
    "precision_level": "[OBDN-level / Standard / Relaxed]",
    "base_grid": "[4px / 8px / 10px]"
  },

  "instant_fail_rules": {
    "description": "Violations that result in immediate rejection",
    "rules": [
      {
        "id": "rule_1_[category]",
        "name": "[Rule Name]",
        "severity": "INSTANT_FAIL",
        "description": "[What this rule prevents]",
        "requirements": [
          "[Requirement 1]",
          "[Requirement 2]"
        ],
        "violation_patterns": [
          "[grep pattern 1]",
          "[grep pattern 2]"
        ],
        "correct_example": {
          "code": "[Example code]"
        }
      }
    ]
  },

  "typography": {
    "fonts": {
      "[font_family_1]": {
        "family": "[Font Family Name]",
        "weights": [400, 600, 700],
        "usage": "[When to use this font]",
        "min_size": 14,
        "allowed_sizes": [14, 16, 18, 20, 24, 32, 40, 48],
        "forbidden_usage": ["[What not to use it for]"]
      }
    },
    "decision_tree": {
      "description": "Font selection algorithm",
      "questions": [
        {
          "q": "[Question about context?]",
          "yes": {
            "font": "[Font Family]",
            "size": ">=24px",
            "weight": 400
          },
          "no": "next"
        }
      ]
    }
  },

  "colors": {
    "foundation": {
      "background": {
        "hex": "#[XXXXXX]",
        "css_var": "--color-background",
        "usage": "[Primary page background]"
      }
    },
    "text": {
      "primary": {
        "value": "#[XXXXXX]",
        "opacity": 1.0,
        "css_var": "--color-text-primary",
        "usage": "[Titles, headings]",
        "contrast_ratio": "[X:1]"
      }
    },
    "accent": {
      "primary": {
        "hex": "#[XXXXXX]",
        "css_var": "--color-accent-primary",
        "usage": "[Primary actions, highlights]",
        "restraint_rule": "<[10]% of page"
      }
    }
  },

  "spacing": {
    "tokens": {
      "space-1": { "value": "[4px]", "css_var": "--space-1", "usage": "[Tight spacing]" },
      "space-2": { "value": "[8px]", "css_var": "--space-2", "usage": "[Small gaps]" },
      "space-3": { "value": "[12px]", "css_var": "--space-3", "usage": "[Medium gaps]" },
      "space-4": { "value": "[16px]", "css_var": "--space-4", "usage": "[Default gaps]" }
    },
    "hierarchy": {
      "description": "Spacing stack from largest to smallest",
      "stack": [
        { "level": "Page sections", "token": "space-[X]", "value": "[XXpx]" },
        { "level": "Card padding", "token": "space-[X]", "value": "[XXpx]" }
      ]
    }
  },

  "components": {
    "cards": {
      "default": {
        "background": "var(--color-surface-base)",
        "border": "1px solid var(--color-border-default)",
        "border_radius": "var(--radius-md)",
        "padding": "var(--space-[X])"
      }
    }
  },

  "verification_patterns": {
    "grep_searches": {
      "hardcoded_colors": {
        "pattern": "(?<!var\\()rgba?\\([0-9, ]+\\)|#[0-9a-fA-F]{3,8}(?!.*var\\()",
        "severity": "INSTANT_FAIL",
        "message": "Hardcoded color values detected - use CSS variables"
      }
    }
  },

  "mental_models": {
    "[model_name]": "[Description of mental model for designer brain]"
  }
}
